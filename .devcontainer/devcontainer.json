{
  "name": "Board Game Caf√© Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-playwright.playwright",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "rangav.vscode-thunder-client",
        "DavidAnson.vscode-markdownlint",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "[csharp]": {
          "editor.tabSize": 4
        },
        "[typescript]": {
          "editor.tabSize": 2
        },
        "[typescriptreact]": {
          "editor.tabSize": 2
        }
      }
    }
  },
  "forwardPorts": [5000, 5001, 5173],
  "portsAttributes": {
    "5000": {
      "label": "API (HTTP)"
    },
    "5001": {
      "label": "API (HTTPS)",
      "protocol": "https"
    },
    "5173": {
      "label": "Frontend (Vite)"
    }
  },
  "updateContentCommand": "echo 'Restoring dependencies...' && cd src/BoardGameCafe.Api && dotnet restore && cd ../../client && npm ci",
  "postCreateCommand": "bash scripts/setup.sh",
  "remoteUser": "vscode"
}